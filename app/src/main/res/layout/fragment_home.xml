<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/btndebt"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40dp"
            app:cardCornerRadius="@dimen/_10dp"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/debt"
            app:cardElevation="@dimen/_10dp"
            android:text="Debt Data"
            android:textColor="@color/white"
            android:gravity="start|center_vertical"
            android:background="@drawable/btn_round">

        </Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:visibility="visible"
                android:layout_marginTop="100dp"
                app:cardCornerRadius="10dp"
                android:layout_centerHorizontal="true"
                app:cardElevation="@dimen/_10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3dp"
                    android:padding="@dimen/_3dp">


                    <ImageView
                        android:id="@+id/finance"
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:src="@drawable/kalku" />

                    <TextView
                        android:id="@+id/txt_finance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:maxLines="2"
                        android:paddingRight="8dp"
                        android:layout_below="@id/finance"
                        android:text="Finance" />

                    <ImageView
                        android:id="@+id/logocommunity"
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_marginStart="40dp"
                        android:layout_toRightOf="@id/finance"
                        android:layout_marginTop="@dimen/_20dp"
                        android:src="@drawable/commun" />

                    <TextView
                        android:id="@+id/txt_com"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txt_finance"
                        android:paddingStart="8dp"
                        android:layout_below="@id/logocommunity"
                        android:text="Community" />

                    <ImageView
                        android:id="@+id/budget"
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_marginStart="55dp"
                        android:layout_toRightOf="@id/logocommunity"
                        android:layout_marginTop="@dimen/_20dp"
                        android:src="@drawable/manage" />

                    <TextView
                        android:id="@+id/txt_manage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txt_com"
                        android:layout_marginStart="20dp"
                        android:layout_below="@id/logocommunity"
                        android:text="Budgeting" />

                    <ImageView
                        android:id="@+id/logo_consul"
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_marginStart="140dp"
                        android:layout_toRightOf="@id/logocommunity"
                        android:layout_marginTop="@dimen/_20dp"
                        android:src="@drawable/consulting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txt_manage"
                        android:layout_marginStart="@dimen/_20dp"
                        android:layout_below="@id/logo_consul"
                        android:text="Consulting" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginTop="@dimen/_20dp"
                app:cardCornerRadius="10dp"
                android:layout_centerHorizontal="true"
                app:cardElevation="@dimen/_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/_15dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Total Charge"

                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="10sp"
                            android:textStyle="italic" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/_15dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="$999"
                            android:padding="@dimen/_3dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/_15dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Total Payment"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="10sp"
                            android:textStyle="italic" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/_15dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="$999"
                            android:padding="@dimen/_3dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/_15dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Unpaid"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="10sp"
                            android:textStyle="italic" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/_15dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="$999"
                            android:padding="@dimen/_3dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@android:color/black" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_15dp"
                            android:fontFamily="@font/poppins_medium"
                            android:padding="@dimen/_5dp"
                            android:text="8 months 2023"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13sp" />


                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="28dp"
                            android:layout_marginEnd="@dimen/_5dp"
                            android:background="@android:color/black" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/_15dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Payment"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_15dp"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingStart="@dimen/_5dp"
                            android:paddingEnd="@dimen/_5dp"
                            android:text="8 tahun"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="13sp" />


                    </RelativeLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/round_image"
                android:layout_marginTop="15dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/fm_home">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:padding="12dp"
                        android:layout_marginTop="8dp"
                        android:text="Progress Chart"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/progressbar"
                        android:padding="10dp"
                        android:layout_marginTop="43dp"/>

                </FrameLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>